{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    {{#if model.lesson}}
      <h3>{{t "Remove Training" key='remove_training'}}</h3>
    {{else}}
      <h3>{{t "Delete this Room" key='delete_this_room'}}</h3>
    {{/if}}
  </div>
  <div class="modal-body">
    {{#if model.lesson}}
      <p>
        {{t "Are you sure you want to remove the training for this room?" key='confirm_delete_training'}}
      </p>
      <strong>{{model.lesson.title}}</strong>
    {{else}}
      <p>
        {{t "Are you sure you want to delete this room?" key='confirm_delete_room'}}
      </p>
      <strong>{{model.unit.name}}</strong><br/>
      {{t "supervisor" count=model.unit.supervisor_count key='n_supervisors_lower'}}<br/>
      {{t "communicator" count=model.unit.communicator_count key='n_communicators_lower'}}
    {{/if}}
  </div>
  <div class="modal-footer">
    <button class='btn btn-primary' {{action 'confirm'}} disabled={{status.removing}}>
      {{#if model.lesson}}
        {{#if status.removing}}
          {{t "Removing Training..." key='removing_training'}}
        {{else if status.error}}
          {{t "Error Removing Training" key='error_removing_training'}}
        {{else}}
          {{t "Remove Training" key='remove_training'}}
        {{/if}}
      {{else}}
        {{#if status.removing}}
          {{t "Deleting Room..." key='deleting_room'}}
        {{else if status.error}}
          {{t "Error Deleting Room" key='error_deleting_room'}}
        {{else}}
          {{t "Delete Room" key='delete_room'}}
        {{/if}}
      {{/if}}
    </button>
    <button class='btn btn-default' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
  </div>
{{/modal-dialog}}

